export XSESSION_PID="$$"
sh "$HOME/.config/dwm/startup.sh" dwm

# Screensaver
xset -dpms; xset s off

# Resolution
xrandr --output DP-0 --primary --mode 5120x1440 --rate 240

# Wallpaper
nitrogen --restore &

while true; do
"$HOME/repos/dotfiles/src/dwm/dwm" 2>> "/tmp/dwm$DISPLAY" || sleep 1
done

# vim: set et sw=2 sts=2 tw=78 ft=sh:

