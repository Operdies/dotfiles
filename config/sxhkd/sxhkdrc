# terminal emulator
super + Return
	wezterm start

# program launcher
super + d
	rofi -modi drun -show drun -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal xfce4-terminal \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

# show open window
super + ctrl + d
	rofi -modi drun -show window -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal xfce4-terminal \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

super + shift + e ; { 1, 2, 3, 4, 5}
  { ~/.config/bspwm/scripts/i3lock-fancy/i3lock-minimalist.sh, \
    bspc quit, \
    ~/.config/bspwm/scripts/i3lock-fancy/i3lock-minimalist.sh; systemctl suspend, \
    systemctl reboot, \
    systemctl poweroff }
  
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + r
	bspc wm -r

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# super + comma : { p , b ; b, comma, period }
# 	bspc node -f @{parent,brother,first,second}

# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last.local

# focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# swap the current node and the biggest window, or the last selected node if the biggest window is selected
super + {_, shift+}g
  ~/.config/bspwm/scripts/window-management/swap-biggest-or-last.sh {local, global}

super + {_, shift +} {1-9,0}
  bspc {desktop -f, node -d} '^{1-9,10}'

# super + {1,2,3}
#   sh ~/.config/bspwm/scripts/window-management/tabber.sh {1,2,3}


super + { space, shift + space } : {1-9,0}
  bspc {desktop -f, node -d} '^{1-9,10}'

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + r ; { q, w, e, r }
  { qutebrowser, wezterm, hakuneko-desktop, pavucontrol }

# Balance the size of all windows 
super + shift + b 
  bspc node @/ -B

super + v : { j, k, m }
  {\
    pactl set-sink-volume 0 -5% && pactl set-sink-mute 0 0,\
    pactl set-sink-volume 0 +5% && pactl set-sink-mute 0 0,\
    amixer -D pulse sset Master toggle-mute
  }


super + b : { j, k }
  { ~/.config/sxhkd/scripts/backlight.sh --dec 5, \
    ~/.config/sxhkd/scripts/backlight.sh --inc 5 }

XF86TouchpadToggle
  bash ~/.config/sxhkd/scripts/libinput.sh wizard
  

# Screenshot
Print
  scrot ~/Pictures/Screenshot-$(date +%F_%T).png

super + s ; { s, a, w }
  ~/.config/bspwm/scripts/screenshot.sh { screen, area, window }

super + m ; { t ; t, r ; t, comma, m, w }
  bsp-layout set{ tall, rtall, tiled, monocle, rwide }

super + F2
  polybar-msg cmd toggle

super + F1
  ~/.config/bspwm/scripts/keybindings_rofi.sh

